---
const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../assets/main.css";
import HeadStuff from "../components/HeadStuff.astro";
---

<html lang="en">
    <head>
        <style is:inline>
            @layer base, composition, blocks, utilities;
        </style>
        <title>{title}</title>
        <HeadStuff />
    </head>
    <body>
        <Header />
        <main>
            <div class="container-small padding-inline-sm">
                <slot />
            </div>
        </main>
        <Footer />
    </body>
</html>
<style is:inline>
    main {
        h1 {
            margin-block: 2rem;
        }

        h2 {
            margin-block: 1.5rem;
        }

        h3,
        h4,
        h5,
        h6 {
            margin-block: 0.875rem;
        }

        p {
            margin-block: 1rem;
        }

        pre {
            padding: 1rem;
        }

        blockquote {
            background-color: var(--clr-primary-light);
            padding: 0.5rem 1.5rem;
            font-family: var(--font-alt);
            font-size: 1.5rem;
        }

        ul {
            list-style-type: disc;
            padding-inline-start: 1rem;
        }
    }
</style>
<style>
    @layer blocks {
        body {
            min-height: 100vh;
            display: grid;
            grid-template-rows: auto 1fr auto;
        }
    }
</style>

---
const { url, published, title, description } = Astro.props;
---
<a href={url}>
  <div>
    <h2> {title} </h2>
    <p class="publishing-date"> { published } </p>
    <p> { description } </p>
  </div>
</a>

<style>
  @layer blocks {
    * {
      --outline: 1px solid purple;
    }
    div {
      padding: var(--space-xs) var(--space-sm);
      border: 1px solid var(--clr-secondary);
      border-radius: var(--space-xs) var(--space-xs) 0 var(--space-xs);
      corner-shape: squircle;
      display: grid;
    }

    h2 {
      line-height: 1.2;
    }

    .publishing-date {
      margin-block-end: var(--space-xxxs);
    }

    a {
      text-decoration: none;

      &:hover h2 {
        text-decoration: underline;
      }

      &:hover div {
        background-color: var(--clr-secondary);
        border-color: var(--clr-secondary-dark);
      }
    }
  }
</style>
